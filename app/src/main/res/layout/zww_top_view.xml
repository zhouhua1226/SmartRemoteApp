<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:background="@color/red"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@color/white">

    <RelativeLayout
    android:id="@+id/refresh_rl"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
    android:layout_marginLeft="65dp"
    android:layout_centerVertical="true"
    android:id="@+id/sx_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/sx2"/>

    <TextView
    android:layout_marginLeft="11dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/sx_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="换一批"
    android:textColor="#353535"
    android:textSize="14sp"/>


    </RelativeLayout>

    <View
    android:layout_width="0.5dp"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="#dcdcdc" />


    <RelativeLayout
    android:id="@+id/service_rl"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
    android:layout_marginLeft="65dp"
    android:layout_centerVertical="true"
    android:id="@+id/sx_image1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/kf2"/>

    <TextView
    android:layout_marginLeft="11dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/sx_image1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="客服"
    android:textColor="#353535"
    android:textSize="14sp"/>


    </RelativeLayout>



    </LinearLayout>

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#dcdcdc"
    />


</LinearLayout>