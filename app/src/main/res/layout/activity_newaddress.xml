<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg03">

        <ImageButton
            android:id="@+id/image_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/back"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新增地址"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/consignee_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人"
            android:textSize="14sp"
            android:textColor="#353535"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:lines="1"
            android:layout_toRightOf="@+id/consignee_tv"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textColorHint="#848484"
            android:textSize="12sp"
            android:textColor="#848484"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ededed"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/Contactphonenumber_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:textSize="14sp"
            android:textColor="#353535"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:phoneNumber="true"
            android:maxLength="11"
            android:lines="1"
            android:layout_toRightOf="@+id/Contactphonenumber_tv"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textColorHint="#848484"
            android:textSize="12sp"
            android:textColor="#848484"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ededed"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地区"
            android:textSize="14sp"
            android:textColor="#353535"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>

        <EditText

            android:layout_toRightOf="@+id/text_tv"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textColorHint="#848484"
            android:textSize="12sp"
            android:textColor="#848484"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ededed"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">
        <EditText
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="详细地址"
            android:textColorHint="#848484"
            android:textSize="12sp"
            android:textColor="#848484"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>



    <Button
        android:id="@+id/preserve_button"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/fillingcurrency_dialog"
        android:text="保存"
        android:textSize="14sp"
        android:textColor="@color/white"
        />

</LinearLayout>