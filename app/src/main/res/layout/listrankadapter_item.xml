<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/rank_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/rank1"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/rankitem_ordinalnum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="10dp"
            />

        <ImageView
            android:id="@+id/rankitem_userImag"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            />


        <TextView
            android:id="@+id/rank_name"
            android:layout_toRightOf="@+id/rankitem_userImag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="花花"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/rank_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#FF7c18"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"/>
        
        <TextView
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:background="@drawable/center_item"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="查看"
            android:gravity="center"
            android:textColor="@color/pink"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/select_pop_gv_bg"/>
    </RelativeLayout>
</LinearLayout>